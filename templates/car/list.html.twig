{% extends 'car_base.html.twig' %}

{% block title %}Car List{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card bg-light mb-3 mt-3">
        <div class="card-body">
          <div class="card-header">Car List</div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Make</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>

                {% for car in cars %}
                    <tr>
                        <td>{{ car.name }}</td>
                        <td>{{ car.make_name }}</td>
                        <td>
                            <a href="{{ path('car_show', {'id': car.id}) }}" class="btn btn-info" >show</a>
                            <a href="{{ path('car_edit', {'id': car.id}) }}" class="btn btn-warning">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
