{% extends 'car_base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card bg-light mb-3 mt-3">
        <div class="card-body">
          <div class="card-header">Car</div>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ car.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ car.name }}</td>
                    </tr>
                </tbody>
            </table>
            <table>
              <tr>
                <td>
                  <a href="{{ path('car_edit', {'id': car.id}) }}" class="btn btn-warning">edit</a>
                </td>
                <td>
                  {{ include('car/_delete_form.html.twig') }}
                </td>
            </table>
          </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
