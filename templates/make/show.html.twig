{% extends 'make_base.html.twig' %}

{% block title %}Make{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card bg-light mb-3 mt-3">
        <div class="card-body">
          <div class="card-header">Make</div>

            <table class="table">
            <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ make.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ make.Name }}</td>
                    </tr>
                </tbody>
            </table>
            <table>
              <tr>
                <td>
                  <a href="{{ path('make_edit', {'id': make.id}) }}" class="btn btn-warning">edit</a>
                </td>
                <td>
                  {{ include('make/_delete_form.html.twig') }}
                </td>
            </table>
          </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
