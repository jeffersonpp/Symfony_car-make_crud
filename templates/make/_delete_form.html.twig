<form method="post" action="{{ path('make_delete', {'id': make.id}) }}" onsubmit="return confirm('Are you sure you want to delete this make?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ make.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
